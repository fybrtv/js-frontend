extends layout

block content
  
  style.
    #editAccountForm{
      margin: auto;
      text-align: center;
    }
    .edit-form-text{
      width: 300px;
      font-size: 24px;
      border-radius: 3px;
      border: 1px solid #ccc;
      padding: 5px;
      outline: none;
    }
    #editButton{
      width: 300px;
      height: 50px;
      font-size: 24px;
      border-radius: 5px;
      background-color: #fff;
      border: 1px solid #ccc;
      outline: none;
    }
  h1= subTitle
  if type == 1
    a.headerButton(href="/upload", id="uploadLink") Upload
  else
    a.headerButton(href="/becomeCreator", id="becomeCreatorLink") Become creator!
  form#editAccountForm(action="/editAccount", method="post")
    p= error
    input(type="text", name="firstname", value="#{firstName}", class="create-form-text")
    br
    br
    input(type="text", name="lastname", value="#{lastName}", class="create-form-text")
    br
    br
    input(type="text", name="email", value="#{email}", class="create-form-text")
    br
    br
    input(type="text", name="username", value="#{username}", class="create-form-text")
    br
    br
    input(type="password", name="password", placeholder="Password", class="create-form-text")
    br
    br
    input(type="password", name="cpassword", placeholder="Confirm Password", class="create-form-text")
    br
    br
    input(type="submit", class="formButton", name="commit", id="editButton", value="Edit profile")
    br
    br
  script.
    console.log("edit profile form running")
