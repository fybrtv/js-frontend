    br
    input(type="text", name="lastName", placeholder="Last Name", class="create-form-text")
    br
    br
    input(type="text", name="email", placeholder="Email", class="create-form-text")
    br
    br
    input(type="text", name="username", placeholder="Username", class="create-form-text")
    br
    br
    input(type="password", name="password", placeholder="Password", class="create-form-text")
    br
    br
    input(type="password", name="cpassword", placeholder="Confirm Password", class="create-form-text")
    br
    br
    input(type="submit", class="formButton", name="commit", id="createButton", value="Create account")
