    #createAccountForm{
      margin: auto;
      text-align: center;
    }
    .create-form-text{
      width: 300px;
      font-size: 24px;
      border-radius: 3px;
      border: 1px solid #ccc;
      padding: 5px;
      outline: none;
    }
    #createButton{
      width: 300px;
      height: 50px;
      font-size: 24px;
      border-radius: 5px;
      background-color: #fff;
      border: 1px solid #ccc;
      outline: none;
    }
