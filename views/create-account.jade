extends layout

block content
  
  style.
    h1{
      margin: auto;
      text-align: center;
      width: 500px;
      margin-top: 300px;
      font-size: 60px;
    }
    #createAccountForm{
      margin: auto;
      text-align: center;
      width: 500px;
    }
    .create-form-text{
      width: 100%;
      height: 100px;
      font-size: 25px;
      padding-left: 10px;
    }
    #createButton{
      width: 100%;
      height: 100px;
      font-size: 45px;
      border-radius: 5px;
    }
    #loginButton{
      width: 100%;
      height: 100px;
      font-size: 30px;
      border-radius: 5px;
    }
  h1(onclick="window.location='/'")= title
  br
  form#createAccountForm(action="/createAccount", method="post")
    input(type="text", name="firstname", placeholder="First Name", class="create-form-text")
    br
    br
    input(type="text", name="lastname", placeholder="Last Name", class="create-form-text")
    br
    br
    input(type="text", name="email", placeholder="Email", class="create-form-text")
    br
    br
    input(type="text", name="username", placeholder="Username", class="create-form-text")
    br
    br
    input(type="password", name="password", placeholder="Password", class="create-form-text")
    br
    br
    input(type="password", name="cpassword", placeholder="Confirm Password", class="create-form-text")
    br
    br
    input(type="submit", class="button", name="commit", id="createButton", value="Create account")
    br
    br
    a(class="button", id="loginButton" href="/login") Login
