extends layout

block content
  
  style.
    #loginForm{
      margin: auto;
      text-align: center;
    }
    .login-form-text{
      width: 300px;
      font-size: 24px;
      border-radius: 3px;
      border: 1px solid #ccc;
      padding: 5px;
      outline: none;
    }
    #loginButton{
      width: 300px;
      height: 50px;
      font-size: 24px;
      border-radius: 5px;
      background-color: #fff;
      border: 1px solid #ccc;
    }
  br
  h1= subTitle
  form#loginForm(action="/login", method="post")
    p= error
    input(type="text", name="username", placeholder="Username", class="login-form-text")
    br
    br
    input(type="password", name="password", placeholder="Password", class="login-form-text")
    br
    br
    input(type="submit", class="button", name="commit", id="loginButton", value="Login")
    br
    br
    a(class="button", id="createAccountButton" href="/createAccount") Create an Account
