extends layout

block content
  
  style.
    h1{
      margin: auto;
      text-align: center;
      width: 500px;
      margin-top: 300px;
      font-size: 60px;
    }
    #loginForm{
      margin: auto;
      text-align: center;
      width: 500px;
    }
    .login-form-text{
      width: 100%;
      height: 100px;
      font-size: 25px;
      padding-left: 10px;
    }
    #loginButton{
      width: 100%;
      height: 100px;
      font-size: 45px;
      border-radius: 5px;
    }
    #createAccountButton{
      width: 100%;
      height: 100px;
      font-size: 30px;
      border-radius: 5px;
    }
  h1(onclick="window.location='/'")= title
  br
  form#loginForm(action="/login", method="post")
    input(type="text", name="username", placeholder="Username", class="login-form-text")
    br
    br
    input(type="password", name="password", placeholder="Password", class="login-form-text")
    br
    br
    br
    input(type="submit", class="button", name="commit", id="loginButton", value="Login")
    br
    br
    a(class="button", id="createAccountButton" href="/createAccount") Create an Account
